    <parent>
        <groupId>com.vaadin</groupId>
        <artifactId>flow-tests</artifactId>
        <version>6.0-SNAPSHOT</version>
    </parent>
    <artifactId>flow-test-osgi</artifactId>
    <name>Flow OSGi Testbase</name>
    <packaging>pom</packaging>

    <properties>
        <osgi-test.version>0.10.0</osgi-test.version>
        <junit-jupiter.version>5.6.2</junit-jupiter.version>
        <junit-platform.version>1.7.0</junit-platform.version>
    </properties>


    <profiles>
        <profile>
            <id>itest-projects</id>
            <activation>
                <file>
                    <exists>src/main/java</exists>
                </file>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-jar-plugin</artifactId>
                        <configuration>
                            <archive>
                                <manifestFile>${project.build.outputDirectory}/META-INF/MANIFEST.MF</manifestFile>
                                <index>false</index>
                                <manifest>
                                    <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                                </manifest>
                            </archive>
                        </configuration>
                    </plugin>

                    <!-- Bundle override bnd.bnd because using file it does not work with tests bundle generation -->
                    <plugin>
                        <groupId>biz.aQute.bnd</groupId>
                        <artifactId>bnd-maven-plugin</artifactId>
                        <version>${bnd.version}</version>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>bnd-process</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <bnd><![CDATA[Bundle-SymbolicName: ${project.artifactId}
Bundle-Version: ${osgi.bundle.version}
Bundle-RequiredExecutionEnvironment: JavaSE-1.8
Bundle-License: http://www.apache.org/licenses/LICENSE-2.0
Import-Package: *
]]>
                            </bnd>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-jar-plugin</artifactId>
                        <configuration>
                            <archive>
                                <manifestFile>${project.build.outputDirectory}/META-INF/MANIFEST.MF</manifestFile>
                                <index>false</index>
                                <manifest>
                                    <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                                </manifest>
                            </archive>
                        </configuration>
                    </plugin>

                    <!-- Testing -->
                    <plugin>
                        <groupId>biz.aQute.bnd</groupId>
                        <artifactId>bnd-maven-plugin</artifactId>
                        <version>${bnd.version}</version>
                        <executions>
                            <!-- Integration Test Configuration -->
                            <execution>
                                <id>bnd-process-tests</id>
                                <phase>process-test-classes</phase>
                                <goals>
                                    <goal>bnd-process-tests</goal>
                                </goals>
                                <configuration>
                                    <bnd><![CDATA[Bundle-SymbolicName: ${project.artifactId}-tests
Bundle-License: http://www.apache.org/licenses/LICENSE-2.0
]]></bnd>
                                    <testCases>junit5</testCases>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <!-- Required to make the maven-jar-plugin pick up the bnd generated manifest. Also avoid packaging empty Jars -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-jar-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>test-jar</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>test-jar</goal>
                                </goals>
                                <configuration>
                                    <archive>
                                        <manifestFile>${project.build.testOutputDirectory}/META-INF/MANIFEST.MF</manifestFile>
                                    </archive>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>biz.aQute.bnd</groupId>
                        <artifactId>bnd-resolver-maven-plugin</artifactId>
                        <version>${bnd.version}</version>
                        <executions>
                            <!-- Integration Test Configuration -->
                            <execution>
                                <id>resolve-test</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>resolve</goal>
                                </goals>
                                <configuration>
                                    <bndruns>
                                        <include>*.bndrun</include>
                                    </bndruns>
                                    <bundles>
                                        <bundle>target/${project.build.finalName}-tests.jar</bundle>
                                    </bundles>
                                    <failOnChanges>false</failOnChanges>
                                    <includeDependencyManagement>true</includeDependencyManagement>
                                    <useMavenDependencies>true</useMavenDependencies>
                                    <writeOnChanges>true</writeOnChanges>
                                    <scopes>
                                        <scope>compile</scope>
                                        <scope>runtime</scope>
                                        <scope>test</scope>
                                    </scopes>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <!-- Define the version of the testing plugin that we use -->
                    <plugin>
                        <groupId>biz.aQute.bnd</groupId>
                        <artifactId>bnd-testing-maven-plugin</artifactId>
                        <version>${bnd.version}</version>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>testing</goal>
                                </goals>
                                <configuration>
                                    <bndruns>
                                        <include>*.bndrun</include>
                                    </bndruns>
                                    <bundles>
                                        <bundle>target/${project.build.finalName}-tests.jar</bundle>
                                        <bundle>target/${project.build.finalName}.jar</bundle>
                                    </bundles>
                                    <includeDependencyManagement>true</includeDependencyManagement>
                                    <scopes>
                                        <scope>compile</scope>
                                        <scope>runtime</scope>
                                        <scope>test</scope>
                                    </scopes>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <skipTests>true</skipTests>
                        </configuration>
                    </plugin>
                </plugins>
            </build>

        </profile>

